// font family variables
$ff--light    = 'Source Sans Pro', sans-serif
$ff--body     = 'Source Sans Pro', sans-serif
$ff--ui       = 'Source Sans Pro', sans-serif
$ff--emphasis = 'Source Sans Pro', sans-serif
$ff--strong   = 'Source Sans Pro', sans-serif
$ff--heading  = 'Source Sans Pro', sans-serif

// font-size variables
$ratio--sml = 1.125
$ratio--med = 1.18
$ratio--lrg = 1.24

$fz--base = 1rem

// font-weight variables
$fw--normal  = normal
$fw--heading = normal

// line height variables
$lh--heading = 1.5
$lh--body    = 1.618

// line-length variable, edit this to suit the typeface chosen.
// the line-length of heading elements will operate on this value
$ll = 74

// letter-spacing variable, edit this to suit the typeface chosen
$ls = inherit
