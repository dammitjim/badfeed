.entry_row
    display flex
    height 50px
    align-items: center;
    justify-content: center;
    width 100%
    border 1px solid #C2C2C2
    border-bottom none
    padding 10px
    position relative

    &--detail
        height 100px

        & ^[0]__actions
            display flex

    &--compact
        height 50px

    &:hover
        background-color darken(white, 1%)

        & ^[0]__actions
            display flex

    &:last-child
    &:only-child
        border-bottom 1px solid #C2C2C2

    &__feed
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        padding-right 10px
        font-size var(--fz--supersub)

    &__text
        flex-grow 1
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        font-size $fz--sub
        font-weight 600

        a
            color $cl--med

    &__date
        flex-grow 0
        font-size var(--fz--supersub)

    &__body
        flex-grow 1
        display flex
        flex-direction column

        &__meta
            display flex
            flex-direction row
            align-items center

    &__actions
        display none
        list-style none
        margin-left 10px

        &__action
            margin 0 5px
            font-family $ff--ui
            font-size var(--fz--supersub)
            text-decoration underline
            font-style italic

            &:hover
                cursor pointer

    &__tertiary
        color black
